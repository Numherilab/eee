dialog{
  id = "quest.main.hazel",
  title = "Die Spur wird heißer",
  text = [[
#Hasel und Papa sind nach Eichenport
#gereist.
@Sieh dich in Eichenport um.
!Die Insel liegt im nordwestlichen Teil
!des Meeres.
@Suche in der Stadt nach Hasel.
!
!Ein Händler, der Mangrovenblätter
!verkauft, könnte eventuell was wissen.
@!Vielleicht ist Hasel in der Herberge
!„Zum Warzenkraut“.
!
!Sie ist im Nordwesten der Stadt.
@!Statte der Bibliothek einen Besuch ab.
@!Hasel wollte sich mit Piraten im
!Hafen treffen.
@Hasel ist im geheimen Archiv des
Bürgermeisters.
!
!Auf dem Marmorfelsen liegt der Eingang
!zu einem geheimen Tunnel – südlich der
!Ruine, über den Wasserfall.
@Triff dich mit Hasel in der Herberge.
]],
}

dialog{
  id = "quest.main.hourglass_fort",
  title = "Die Sanduhr-Piraten",
  text = [[
##Du hast das Versteck der Sanduhr-
##Piraten schon fast gefunden.
@Suche Jerah.
!
!Er ist in den Wacholderhain in der
!Nähe des Stegs gegangen.
%2!
%2!Vielleicht kannst du den Schlüssel aus
%2!dem Wacholderhain noch brauchen.
@Erkunde die Königshöhe
!
!Ein Tunnel führt durch Katakomben und
!links neben einer Bärenstatue steht
!eine Säule mit einem Schlüsselloch.
!Aber du brauchst erst den Schlüssel …
@Nutze die Katakomben, um in die
Sanduhr-Feste zu gelangen.
#::
#%=$i0    AUFGABENGEGENSTAND:
#%=    $ITEM_NAME
]],
}

dialog{
  id = "quest.main.isle_of_storms",
  title = "Die Sturminsel",
  text = [[
##Schwarzbarts besorgter erster Maat hat
##dir eine Seekarte gegeben, die zur
##Sturminsel führt.
@Finde wen, der dich zur Insel bringt.
::!
%=!$i0    AUFGABENGEGENSTAND:
%=!    $ITEM_NAME
@Finde einen Weg in den versunkenen
Palast des Meerkönigs.
@Suche nach dem Herz der See.
@!Fliehe aus dem einstürzenden Palast!
@Kämpfe gegen Schwarzbart.
]],
}

dialog{
  id = "quest.main.kelpton",
  title = "Der Kartenverkäufer",
  text = [[
##Malvo wurde im Ballasthafen gesehen.
@Sprich mit dem Kartenverkäufer, mit
dem er gesprochen hat.
@Betritt die Piratenrat-Schatzkammer.
@!Finde Tanglers Seekarten.
@Bringe Tanglers Seekarten zurück.
@Du hast einen Schlüssel erhalten, den
Malvo bei Tangler vergessen hat.
!
!Vielleicht besteht eine Verbindung zu
!den Sanduhr-Piraten, aber vorerst
!solltest du anderen Hinweisen folgen.
#::
#%=$i0    AUFGABENGEGENSTAND:
#%=    $ITEM_NAME
]],
}

dialog{
  id = "quest.main.limestone.get_whisky",
  title = "Whiskey für Nusser",
  text = [[
##Nusser, der Freund deines Papas,
##hatte in letzter Zeit kein Glück.
@Finde eine Flasche Whiskey im
Geheimversteck.
!
!Das Versteck liegt im Norden
!der Insel.
@Bringe den „Whiskey“ zu deinem Vater
zurück.
?
?Piraten haben das Dorf angegriffen.
?Selbst Whiskey könnte diese Woche
?nicht aufhellen.
#::
#%=$i0    AUFGABENGEGENSTAND:
#%=    $ITEM_NAME
]],
}

dialog{
  id = "quest.main.limestone.meet_juglan_at_pier",
  title = "Es geht los",
  text = [[
##Nusser wird dich zum Hafen von
##Kitzkopf bringen.
@Triff Nusser am Steg.
@Besuche die Taverne „Zum durstigen
Kormoran“.
]],
}

dialog{
  id = "quest.main.mangrove_sword",
  title = "Das Mangrovenschwert",
  text = [[
##Hasel glaubt, das Schwert des Meerkö-
##nigs könne das Herz der See zerstören.
@Finde ein altes Mangrovendickicht.
!
!Der Fischhändler auf dem Markt ver-
!kauft auch Mangrovenblätter. Er könnte
!wissen, wo viele Mangroven wachsen.
@Triff dich mit Hasel beim Südtor.
!$!Bring sie zum Möwenstein südwestlich
!der Stadt.
@Finde den ältesten Mangrovenbaum im
Dickicht.
@Hole dir das Schwert des Meerkönigs.
#::
#%=$i0    AUFGABENGEGENSTAND:
#%=    $ITEM_NAME
]],
}

dialog{
  id = "quest.main.monkshood",
  title = "Schläfrige Kräuter",
  text = [[
##Um in die Krähenfeste einzudringen,
##benötigst du einen Schlaftrank.
@Sammle Eisenhut-Blütenblätter.
!
!Suche sie im nordwestlichen Teil des
!Marmorfelsens in der Nähe von
!gefährlichen Pflanzen.
@Bringe die Eisenhut-Blütenblätter zur
Apotheke.
#::
#%=$i0    AUFGABENGEGENSTAND:
#%=    $ITEM_NAME ($v1) --// $v1 is the number of monkshood petals the player has in inventory
#%=
#BELOHNUNG: $ITEM{sleeping_draught.1}    Schlaftrank
]],
}

dialog{
  id = "quest.main.pirate_fort",
  title = "Die Piratenfeste",
  text = [[
##Du musst herausfinden, ob der Piraten-
##rat schon weiß, wo die Sturminsel ist.
##Hasel kennt den Aufenthaltsort eines
##Kapitäns.
@Sprich mit Maulbeer.
!
!Er ist ein Mitglied der Freiwilligen
!Flotte und oft im Saloon Salamander-
!kummer anzutreffen.
@Besorge einen Schlaftrank. $!Frag
!mal in der Apotheke der Stadt nach.
!
!Du findest die Apotheke im Osten der
!Stadt.
@!Kehre zu Maulbeer zurück.
@Finde die Bierlieferung für die
Piraten und gieße den Trank hinein.
!
!Suche nach einem Fass mit einem Stern.
@Schleich dich in die Krähenfeste rein.
!$!Am besten, wenn die Piraten schlafen.
!Die Feste ist südlich des Lotoswatts.
!Maulbeer wartet bei der Krähenfeste
!auf dich.
@Finde Kapitän Al-Jazari.
#::
#%=$i0    AUFGABENGEGENSTAND:
#%=    $ITEM_NAME
]],
}

